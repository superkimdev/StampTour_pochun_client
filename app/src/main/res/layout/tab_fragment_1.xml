<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/stdColorWhite"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hide_manage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:text="숨김관리"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/LoginTitleTextSize" />

        <TextView
            android:id="@+id/main_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="거리순"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/LoginTitleTextSize" />

        <TextView
            android:id="@+id/contents_sort_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="정렬"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/LoginTitleTextSize" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/horizontal_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:background="@color/cardview_dark_background" />
    <ListView
        android:id="@+id/TownListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/horizontal_line1"/>

</RelativeLayout>